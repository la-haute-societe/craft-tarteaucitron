{% css %}
    {{ customCss }}
{% endcss %}

{% js %}
    tarteaucitron.init({
        "hashtag": "{{ hashtag }}",
        "highPrivacy": {{ highPrivacy ? 'true' : 'false' }},
        "acceptAllCta": {{ acceptAllCta ? 'true' : 'false' }},
        "orientation": "{{ orientation }}",
        "adblocker": {{ adblocker ? 'true' : 'false' }},
        "showAlertSmall": {{ showAlertSmall ? 'true' : 'false' }},
        "cookieslist": {{ cookieslist ? 'true' : 'false' }},
        "removeCredit": {{ removeCredit ? 'true' : 'false' }},
        "handleBrowserDNTRequest": {{ handleBrowserDNTRequest ? 'true' : 'false' }},
        "useExternalCss": "true",
        {% if cookieDomain %}"cookieDomain": "{{ cookieDomain }}"{% endif %}
    });
{% endjs %}

{# Google Tag Manager #}
{% if isGoogleTagManagerEnabled and googleTagManagerId is not empty %}
    {% js %}
        tarteaucitron.user.googletagmanagerId = '{{ googleTagManagerId }}';
        (tarteaucitron.job = tarteaucitron.job || []).push('googletagmanager');
    {% endjs %}
{% endif %}

{# reCAPTCHA #}
{% if isReCAPTCHAEnabled and reCAPTCHASiteKey is not empty %}
    {% if reCAPTCHACallbackName is not empty %}
        {% js %}
            tarteaucitron.user.recaptchaOnLoad = function() { {{ reCAPTCHACallbackName }}() };
        {% endjs %}
    {% endif %}
    {% js %}
        (tarteaucitron.job = tarteaucitron.job || []).push('recaptcha');
    {% endjs %}
{% endif %}

{# Google Maps #}
{% if isGoogleMapsEnabled and googleMapsAPIKey is not empty %}
